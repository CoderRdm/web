<div class="max-w-2xl mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6 text-white">Upload a New Gig</h1>
        
        <form action="/creategig" method="post" class="space-y-6">
            <!-- Title -->
            <div>
                <label for="title" class="block text-sm font-medium text-white mb-2">
                    Gig Title
                </label>
                <input
                    type="text"
                    id="title"
                    name="title"
                    required
                    placeholder="Enter gig title"
                    class="w-full px-5 py-2 border-2 border-zinc-800 bg-slate-500 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:border-lime-500"
                />
            </div>

            <!-- Price -->
            <div>
                <label for="price" class="block text-sm font-medium text-white mb-2">
                    Price ($)
                </label>
                <input
                    type="number"
                    id="price"
                    name="price"
                    required
                    placeholder="Enter price"
                    min="0"
                    step="0.01"
                    class="w-full px-5 py-2 border-2 border-zinc-800 bg-slate-500 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:border-lime-500"
                />
            </div>

            <!-- Category -->
            <div>
                <label for="category" class="block text-sm font-medium text-white mb-2">
                    Category
                </label>
                <input
                    type="text"
                    id="category"
                    name="category"
                    required
                    placeholder="Enter category"
                    class="w-full px-5 py-2 border-2 border-zinc-800 bg-slate-500 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:border-lime-500"
                />
            </div>

            <!-- Description -->
            <div>
                <label for="description" class="block text-sm font-medium text-white mb-2">
                    Description
                </label>
                <textarea
                    id="description"
                    name="description"
                    required
                    placeholder="Enter description"
                    rows="4"
                    class="w-full px-5 py-2 border-2 border-zinc-800 bg-slate-500 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:border-lime-500"
                ></textarea>
            </div>

            <!-- Work Experience -->
            <div>
                <label for="workexperience" class="block text-sm font-medium text-white mb-2">
                    Work Experience
                </label>
                <textarea
                    id="workexperience"
                    name="workexperience"
                    required
                    placeholder="Enter work experience"
                    rows="3"
                    class="w-full px-5 py-2 border-2 border-zinc-800 bg-slate-500 rounded-lg text-white placeholder-gray-300 focus:outline-none focus:border-lime-500"
                ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <input
                    type="submit"
                    value="Create a Gig"
                    class="bg-lime-500 text-white px-6 py-3 rounded-lg hover:bg-lime-600 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-lime-500 focus:ring-offset-2"
                />
            </div>
        </form>
    </div>




